{
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Jest Tests",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--trace-warnings"
      ],
      "args": [
        // "--inspect-brk",
        "--runInBand",
        "--setupFilesAfterEnv",
        "${workspaceFolder}/scripts/jest-debug-setup.js",
        "--config",
        "${workspaceFolder}/jest.config.js",
        // "--testNamePattern",
        // "@ApiConsumer definition not registered"
      ],
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "preLaunchTask": "yarn: tsc",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}